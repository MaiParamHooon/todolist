
<%- include("header") -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1> 
    </div>

    <div class="box">
        <% for(var i = 0; i <newListItems.length; ++i) { %>
        
        <form  action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="ckbx" value="<%=newListItems[i]._id%>">
                <!-- <p> newListItems[i] </p>  -->
                <p><%= newListItems[i].name %></p> 
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </form>
        <% } %>
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" id="" placeholder="New Item" autocomplete="off" required class="ip">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include("footer") -%>
